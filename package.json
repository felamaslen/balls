{
  "name": "balls",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "preinstall": "rm -rf ./node_modules",
    "postinstall": "./node_modules/.bin/webpack",
    "start": "NODE_ENV=production node ./app/index.js",
    "dev": "NODE_ENV=development nodemon -w ./app ./app/index.js",
    "test": "./node_modules/.bin/mocha --require babel-core/register \"./test/**/*.spec.js\" --bail --reporter spec",
    "lint": "./node_modules/.bin/eslint webpack.config.js webpack app src test"
  },
  "author": "",
  "license": "MIT",
  "babel": {
    "env": {
      "production": {
        "presets": [
          "react",
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "ie >= 10"
                ]
              }
            }
          ],
          "stage-0"
        ],
        "sourceMaps": "inline"
      },
      "development": {
        "presets": [
          "react",
          "stage-0"
        ],
        "plugins": [],
        "sourceMaps": "inline"
      },
      "test": {
        "presets": [
          "react",
          [
            "env",
            {
              "targets": {
                "node": "8"
              }
            }
          ],
          "stage-0"
        ]
      }
    }
  },
  "dependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "dotenv-webpack": "^1.5.4",
    "ejs": "^2.5.7",
    "express": "^4.15.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.30.1",
    "immutable": "^3.8.1",
    "import-glob-loader": "^1.1.0",
    "node-sass": "^4.5.3",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^4.0.0-beta.14",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-create-reducer": "^1.1.1",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.6.0",
    "webpack-spritesmith": "^0.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "enzyme": "^2.9.1",
    "eslint": "^4.7.1",
    "eslint-plugin-react": "^7.5.1",
    "jsdom": "^11.2.0",
    "react-test-renderer": "^15.6.1",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-dev-server": "^2.8.2",
    "webpack-hot-middleware": "^2.21.0"
  }
}
